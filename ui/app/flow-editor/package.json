{
  "name": "flow-editor",
  "version": "1.0.0",
  "description": "Simple editor to link and process OpenRemote asset attributes",
  "author": "OpenRemote",
  "main": "dist/bundle.js",
  "types": "src/index.ts",
  "scripts": {
    "clean": "npx shx rm -rf dist",
    "modelBuild": "node ../../model-build.js",
    "modelWatch": "node ../../model-watch.js",
    "build": "npx tsc -b && npx cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack --mode production",
    "serve": "npx cross-env NODE_OPTIONS=--max_old_space_size=4096 webpack-dev-server --port 1234 --mode development",
    "watch": "npx tsc -b -w",
    "test": "mocha -opts ./src/test/mocha.opts ./src/**/*.spec.ts",
    "karma": "karma start --single-run --browsers Chrome karma.conf.js"
  },
  "license": "AGPL-3.0-or-later",
  "private": true,
  "dependencies": {
    "linqts": "^1.12.6",
    "lit-element": "^2.2.0",
    "resize-observer": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.7",
    "@webcomponents/webcomponentsjs": "^2.3.0",
    "chai": "^4.2.0",
    "core-util-is": "^1.0.2",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^6.2.2",
    "style-loader": "^1.0.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  }
}
