{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/test"
  ],
  "references": [
    { "path": "../../../openremote/ui/component/core" },
    { "path": "../../../openremote/ui/component/or-translate" },
    { "path": "../../../openremote/ui/component/rest" },
    { "path": "../../../openremote/ui/component/or-input" },
    { "path": "../../../openremote/ui/component/or-asset-tree" },
    { "path": "../../../openremote/ui/component/or-icon" },
  ]
}
